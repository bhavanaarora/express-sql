                <div class="form-group">
                    <div class="form-label fs-4 fw-bold">Password</div>
                    <input class="form-control" type="password" name="password">
                </div>
                <div class="d-grid gap-2 mt-3 ">
                    <button type="submit" class=" text-white fs-4 fw-bold">Submit</button>
                    <button type="reset" class=" text-white fw-bold fs-4 ">Reset</button>
                    <button type="button" name="login"class=" fw-bold fs-4"><a  class=" text-warning text-decoration-none" href="/user">New User</a></button>

                </div>
              
               
                <% if(msg == 'true') { %>
                   <br> <h5 class="text-white fw-bold fs-5">please enter email and password !</h5>
                    
                   <% } else if(msg2 == 'true') { %>
                     <br> <h5 class="text-warning">Incorrect credentials !</h5>
                     
                     <% } else if(msg3 == 'true') { %>
                     <br> <h5 class="text-danger">Incorrect password !</h5>
                     <% }  %>
                     
                     

            </form>
        </div>
    </div>
</div>

</section>



