<!DOCTYPE html>
<html lang="en">
<%- include('./common/head.ejs') %>
<body class="background">

    <section class="login">

<div class="container my-5">

    <div class="row">
        <div class="col-12 col-lg-6, col-xxl-4  mx-auto p-4   ">
            <form  method="POST" action="/login">
                <h3 class="text-center  text-white fs-2 fw-bold p-3"> Login Form</h3>
                <div class="form-group">
                    <div class="form-label fs-4 fw-bold">Email ID</div>
                    <input class="form-control" type="email" name="email">
