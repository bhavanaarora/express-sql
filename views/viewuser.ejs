<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
       <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" ></script>
    <link rel="stylesheet" href="../public/database.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" class="href">
</head>

<body class="background">
  <section class="viewuser">
  
        <div class="container-fluid d-flex justify-content-end">
        
        <div class="logout">
        <a class="btn text-white fs-3 fw-bold " href="/logout">Logout</a>
        </div>
</div>
    <div class="container my-5">
        <h1 class='text-center display-5'>View User</h1>
        <div class="row px-5">
            <div class="col">
               <% if(data.length > 0) { %>

                <table class="table display table-responsive">
                    
                    <thead>
                      <tr>
                        <th scope="col">ID</th>
                        <th scope="col">FirstName</th>
                        <th scope="col">LastName</th>
                        <th scope="col">Email</th>
                        <th scope="col">Mobile</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for ( var i=0;i<data.length; i ++){ %> 
                      <tr>
                        <td><%= i + 1 %></td>
                        <td><%= data[i].firstname %></td>
                        <td><%= data[i].lastname %></td>
                        <td><%= data[i].email %></td>
                        <td><%= data[i].mobile %></td>
                        <td>
                            <div class="d-grid gap-4">
                           
                              <button>  <a class="btn  text-decoration-none text-white  fw-bold fs-5  " type="btn" href="/edit/<%= data[i].id %>">Edit</a></button>
                                <button><a class="btn text-decoration-none text-white fs-5 fw-bold" type="btn" href="/delete/<%= data[i].id %>">Delete</a></button>
                        </div>
                        </td>
                      </tr>
                   <% } %>
                     
                    </tbody>
                  </table>


                  <% } else { %>
                   
                    <h3>NO RECORD FOUND!</h3>

                    <% } %>

            </div>
        </div>
    </div>
  </section>
    
    

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
<script>
// $(document).ready(function () {
